<h1> Sign In </h1>

<%= form_with url: sign_in_path do |form| %>

<div class="mb=3">
    <%= form.label :email %>
</div>

<div class="mb=3">
    <%= form.email_field :email, class: "form-control" %>
</div>

<div class="mb=3">
    <%= form.label :password %>
</div>

<div class="mb=3">
    <%= form.password_field :password, class: "form-control" %>
</div>

<div class="mb=3">
    <%= form.submit "Login", class:"btn btn-primary" %>
</div>
<% end %>

<% if flash[:alert] %>
  <script>alert("<%= flash[:alert] %>");</script>
<% end %>
